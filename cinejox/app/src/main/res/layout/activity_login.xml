<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@color/colorBlackShadow"
        android:orientation="vertical"
        android:weightSum="100"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="-250dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorRedBlood"
            android:fontFamily="sans-serif-black"
            android:shadowColor="@color/colorBlackShadow"
            android:text="CineJ0x"
            android:textAlignment="center"
            android:textColor="@color/colorWhiteIce"
            android:textSize="50dp"
            app:fontFamily="@font/black_ops_one" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="304dp"
            app:srcCompat="@drawable/logo_1" />

        <TextView
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="10"
            android:gravity="right"
            android:text="Email"
            android:textColor="@color/colorWhiteIce"
            android:textSize="30dp"
            app:fontFamily="@font/black_ops_one" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="15dp"
            android:hint="Introduce tu email"
            android:textColorHint="@color/colorWhiteIce"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="10"
            android:gravity="right"
            android:text="Password"
            android:textColor="@color/colorWhiteIce"
            android:textSize="30dp"
            app:fontFamily="@font/black_ops_one" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Introduce tu contraseña"
            android:textColorHint="@color/colorWhiteIce"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="36dp"
            android:background="@color/colorWhiteIce"
            android:text="Iniciar Sesión"
            android:fontFamily="@font/black_ops_one"
            android:textColor="@color/colorBlackShadow"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnRegistro"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="34dp"
            android:background="@color/colorWhiteIce"
            android:text="Registrarse"
            android:fontFamily="@font/black_ops_one"
            android:textColor="@color/colorBlackShadow"
            android:textSize="20dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>